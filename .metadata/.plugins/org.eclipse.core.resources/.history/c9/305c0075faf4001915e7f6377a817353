package dao;

import java.util.List;

import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;

import clases.Amortizacion;

public class AmortizacionDao {
	
	protected JdbcTemplate jdbcTemplate;

	public void setJdbcTemplate(JdbcTemplate jdbcTemplate) {
		this.jdbcTemplate = jdbcTemplate;
	}
	public void add( Amortizacion amortizacion)
	{
		jdbcTemplate.execute( "INSERT INTO Amortizacion( id_solicitud, periodo, plazo, interes, pago, capital_pendiente) "
				+ "VALUES( " + amortizacion.getId_solicitud() + "," + amortizacion.getPeriodo() + "," + amortizacion.getPlazo() + "," 
				+ amortizacion.getInteres() + "," + amortizacion.getPago() + "," + amortizacion.getCapital_pendiente() + ")");
	}
	
	public List<Amortizacion> getAmortizacionBySolicitud( Amortizacion amortizacion){
		
		List<Amortizacion> list = jdbcTemplate.query( "SELECT * FROM Amortizacion WHERE id_solicitud = " +  amortizacion.getId_solicitud()
		, new BeanPropertyRowMapper( Amortizacion.class));
		
		return list;
	}
	
	

}
